{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2019",
    "allowJs": true,
    "sourceMap": true,

    /* Module Resolution Options */
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}